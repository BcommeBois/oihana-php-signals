{
    "name" : "oihana/php-signals" ,
    "type" : "library" ,
    "description" : "The Oihana PHP Signals library" ,
    "keywords" : [ "php" , "signals" , "message" , "notice" , "receiver"] ,
    "homepage" : "https://github.com/BcommeBois/oihana-php-signals" ,
    "license" : "MPL-2.0" ,
    "authors" : [
        {
            "name" : "Marc Alcaraz" ,
            "email" : "marc@ooop.fr" ,
            "homepage" : "https://www.ooop.fr" ,
            "role" : "Project Founder, Lead Developer."
        }
    ],
    "support": {
        "email": "marc@ooop.fr"
    },
    "scripts": {
        "doc": "rm -rf docs && mkdir docs && cp -r assets docs/assets && ./vendor/bin/phpdoc -c phpdoc.xml -v" ,
        "test": "./vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4" :
        {
            "oihana\\" : "src/oihana"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\" : "tests"
        }
    },
    "require": {
        "php": ">=8.4",
        
        "oihana/php-core": "dev-main",
        "oihana/php-reflect": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "nunomaduro/collision": "^8.8",
        "mikey179/vfsstream": "^1.6",
        "phpdocumentor/shim": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "phpdocumentor/shim": true
        }
    }
}
